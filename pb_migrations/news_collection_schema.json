{
    "name": "news",
    "type": "base",
    "system": false,
    "schema": [
        {
            "id": "title_field",
            "name": "title",
            "type": "json",
            "required": true,
            "presentable": false,
            "unique": false,
            "options": {
                "maxSize": 1000
            }
        },
        {
            "id": "content_field",
            "name": "content",
            "type": "json",
            "required": true,
            "presentable": false,
            "unique": false,
            "options": {
                "maxSize": 10000
            }
        },
        {
            "id": "excerpt_field",
            "name": "excerpt",
            "type": "text",
            "required": false,
            "presentable": false,
            "unique": false,
            "options": {
                "min": null,
                "max": 500,
                "pattern": ""
            }
        },
        {
            "id": "image_field",
            "name": "image",
            "type": "file",
            "required": false,
            "presentable": false,
            "unique": false,
            "options": {
                "mimeTypes": [
                    "image/jpeg",
                    "image/png",
                    "image/webp",
                    "image/svg+xml"
                ],
                "thumbs": [
                    "100x100",
                    "300x300",
                    "600x600"
                ],
                "maxSelect": 1,
                "maxSize": 5242880,
                "protected": false
            }
        },
        {
            "id": "category_field",
            "name": "category",
            "type": "select",
            "required": true,
            "presentable": false,
            "unique": false,
            "options": {
                "maxSelect": 1,
                "values": [
                    "General",
                    "Exams",
                    "Events",
                    "Urgent"
                ]
            }
        },
        {
            "id": "is_published_field",
            "name": "is_published",
            "type": "bool",
            "required": true,
            "presentable": false,
            "unique": false,
            "options": {}
        },
        {
            "id": "grade_field",
            "name": "grade",
            "type": "text",
            "required": false,
            "presentable": false,
            "unique": false,
            "options": {
                "min": null,
                "max": 50,
                "pattern": ""
            }
        },
        {
            "id": "important_field",
            "name": "important",
            "type": "bool",
            "required": false,
            "presentable": false,
            "unique": false,
            "options": {}
        }
    ],
    "indexes": [],
    "listRule": "is_published = true",
    "viewRule": "is_published = true",
    "createRule": "@request.auth.id != ''",
    "updateRule": "@request.auth.id != ''",
    "deleteRule": "@request.auth.id != ''"
}